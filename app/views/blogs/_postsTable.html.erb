<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <th>id</th>
      <th>Slug</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= blog.id %></td>
        <td><%= blog.slug %></td>
        <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
      </tr>
    <% end %>
  </tbody>
</table>